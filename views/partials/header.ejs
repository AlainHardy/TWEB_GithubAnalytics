         text.style.cssText = "position:fixed;text-align:center;width:100%;z-index:1501;top:31%;";
         var myDiv = document.createElement('div');
         myDiv.style.cssText = "height:100%;width:100%;position:fixed;background-color:white;z-index:1500;opacity:.8;top:0px;";
